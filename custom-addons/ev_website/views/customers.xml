<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ev_customer_tree" model="ir.ui.view">
        <field name="name">ev.customer.tree</field>
        <field name="model">ev_website.customer</field>
       <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email_from"/>
                <field name="phone"/>
                <field name="company"/>
                <field name="subject"/>
            </list>
        </field>
    </record>

    <record id="view_ev_customer_form" model="ir.ui.view">
        <field name="name">ev.customer.form</field>
        <field name="model">ev_website.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email_from"/>
                        <field name="phone"/>
                        <field name="company"/>
                        <field name="subject"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
